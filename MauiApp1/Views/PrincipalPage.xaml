<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.PrincipalPage"
             Background="Aquamarine"
             Title="PrincipalPage">    
    
    <VerticalStackLayout Margin="10">

        

        <Image Source="buscador.png" WidthRequest="400" Margin="0,20"/>

        <Button 
            Clicked="btnPrincipalSalir_Clicked"
            x:Name="btnPrincipalSalir"
            Text="Salir" 
            Background="Tomato" 
            TextColor="White" 
            Margin="0,10" />
        <Button 
            Clicked="btnPrincipalAcerca_Clicked"
            x:Name="btnPrincipalAcerca"
            Text="Acerca" 
            Background="DarkOliveGreen" 
            TextColor="White" 
            Margin="0,10" />


    </VerticalStackLayout>
</ContentPage>